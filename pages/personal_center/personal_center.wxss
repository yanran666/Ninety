.user-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.name-card {
  background: white;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.user-nickname, .user-phone {
  font-size: 26rpx;
  color: #000;
  margin-bottom: 12rpx;
  display: block;
}

.section-card {
  background: white;
  margin-top: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 26rpx;
  color: #000;
}

.role-section {
  position: relative;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.role-switch-btn {
  font-size: 22rpx;
  padding: 15rpx 20rpx;
  background-color: black;
  color: white;
  border: none;
  left: 200rpx;
  border-radius: 6rpx;
  line-height: 1;
}

.menu-item {
  font-size: 24rpx;
  color: #333;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.about-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.8;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

/* 黑底白字的功能按钮 */
.action-btn {
  background-color: black;
  color: white;
  font-size: 24rpx;
  padding: 14rpx 0;
  margin: 12rpx;          /* ✅ 上下留白 + 居中 */
  width: 25%;                  /* ✅ 不再铺满整行，缩短宽度 */
  max-width: 500rpx;           /* ✅ 防止大屏太长 */
  border: none;
  border-radius: 6rpx;
  text-align: center;
  line-height: 1.2;
}


.menu-item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-label {
  font-size: 26rpx;
  color: #333;
}

.menu-arrow {
  font-size: 32rpx;
  color: #999;
}





