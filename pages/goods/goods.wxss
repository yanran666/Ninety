.custom_card {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 100px;
  background: #2E2E2E;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
  /* border-radius: 20rpx; */
  padding: 40rpx;
}
.order_text {
  font-size: large;
  margin: 0 15rpx;
  color: #FFFFFF;
}
.order_container {
  display: flex;
  flex-direction: row;
  padding-top: 20px;
  justify-content: left;
}
.divider_v {
  width: 1rpx;
  top: 10px;
  padding-top: 5px;
  height: 30rpx !important;
}
.location_text{
  display:block;
  font-size: medium;
  color: #FFFFFF;
  margin: 0 15rpx;
  padding-top: 10px;
}

.page_wrapper {
  padding-top: 130px; /* 顶部预留空间 */
}

.menu_container {
  display: flex;
  height: 100vh;
  margin-top: 20rpx;
}
.category_list {
  width: 22%;
  background-color: #ffffff;
}
.category_item_wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  position: relative;
}
.category_item {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  padding: 10rpx 0;
}
.product_list {
  width: 78%;
  padding: 0 20rpx;
}
.product_list::-webkit-scrollbar {
  display: none;
}

.category_block {
  margin-top: 20rpx;
}
.anchor-spacer {
  height: 20rpx;  /* ✅ 留下你想要的空隙 */
  margin-top: -20rpx;  /*✅ 向上抬起，scroll-into-view 时就会空出位置*/
}

.category_title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.product_card {
  display: flex;
  flex-direction: row;  /* 横向排列 */
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 0rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
}

.product_image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 0rpx;
  flex-shrink: 0;
}

.product_info {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product_name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.product_desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

.product_price {
  font-size: 26rpx;
  color: #f56c6c;
  margin-top: 10rpx;
}
.spec_button {
  align-self: flex-end;
  background-color: #000;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 0rpx;
  margin-top: 16rpx;
  line-height: 1;
}

.category_item.active {
  color: #000000;
  font-weight: bold;
}

.slider {
  width: 5rpx;
  height: 40rpx;
  background-color: transparent;
  margin-right: 0;
  transition: background-color 0.3s;
}

.slider-active {
  background-color: #333333; /* 可以换成品牌色 */
  border-radius: 0rpx;
}
.product_desc {
  font-size: 24rpx;
  color: #888;
  margin: 6rpx 0;
  line-height: 1.4;
}

.spec_button {
  align-self: flex-end;
  background-color: #000;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 24rpx;
  border-radius: 0rpx;
  margin-top: 12rpx;
  line-height: 1;
  margin-right: 0rpx;
}
.info_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.floating-cart {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #f2f2f2;
  box-shadow: 0 -2rpx 6rpx rgba(0,0,0,0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  z-index: 1000;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;           /* ✅ 固定高度 */
  background: #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
  padding: 0;               /* ✅ 移除左右 padding */
}


.cart-total {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-left: 20rpx;
}

.checkout-btn {
  background-color: #000;
  color: #fff;
  font-size: 28rpx;
  height: 100%;             /* ✅ 跟 .cart-bar 高度一致 */
  border-radius: 0;         /* ✅ 去掉圆角 */
  width: 30%;               /* ✅ 自定义宽度 */
  margin: 0;                /* ✅ 去掉边距 */
  border: none;
  text-align: center;
  line-height: 100rpx;      /* ✅ 垂直居中 */
}
.cart-left {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.cart-icon-wrapper {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.cart-icon {
  width: 100%;
  height: 100%;
}

.cart-count-overlay {
  position: absolute;
  top: 58%;
  left: 55%;
  transform: translate(-50%, -50%);
  color: #000;
  font-size: 22rpx;
  font-weight: bold;
  background-color: transparent;
}

.cart-popup {
  position: fixed;
  transform: translateY(0); /* 初始位置 */
  transition: transform 0.3s ease;
  bottom: 100rpx; /* ⬅️ 避开底部结算栏 */
  left: 0;
  width: 100%;
  max-height: 600rpx; /* ✅ 可以调整 */
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.1);
  z-index: 1001;
  border-top: 1rpx solid #e0e0e0;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.cart-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}


.cart-delete-icon {
  width: 32rpx;
  height: 32rpx;
  padding-right: 30rpx;
}


.cart-divider {
  height: 2rpx;
  background-color: #ccc;
  width: 370px;
  margin-bottom: 20rpx;
}

.cart-product-list {
  flex: 1;
  overflow-y: auto;
  max-height: 480rpx;
}


.cart-item {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  overflow: hidden;
  flex-wrap: nowrap;
  
}
.cart-divider-line {
  height: 2rpx;
  background-color: #ccc;
  width: 370px;
  margin-bottom: 20rpx;
}

@keyframes slideOut {
  0% {
    transform: translateX(0);
    opacity: 1;
  }
  100% {
    transform: translateX(100%);
    opacity: 0;
  }
}

.removing-slide {
  animation: slideOut 0.4s forwards;
}

@keyframes slideDown {
  0% {
    transform: translateY(0);
    opacity: 1;
  }
  100% {
    transform: translateY(100%);
    opacity: 0;
  }
}

.cart-popup.slide-out {
  animation: slideDown 0.4s ease forwards;
}


