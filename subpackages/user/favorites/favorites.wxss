.favorites-page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

.favorite-item {
  background: white;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.product-img {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 8rpx;
}

.spec {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 12rpx;
}

.divider-line {
  border-bottom: 1rpx solid #eee;
  margin-left: 136rpx;
}
