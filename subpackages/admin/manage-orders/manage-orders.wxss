/* pages/manage-orders/manage-orders.wxss */

/* 整体背景 & 内边距 */
.order-page {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 每个订单卡片 */
.order-card {
  background-color: #fff;
  margin-bottom: 24rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 卡片头部：地址/时间 + 状态下拉 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 左侧：地址和时间垂直布局 */
.addr-time {
  display: flex;
  flex-direction: column;
}

.order-location {
  font-size: 28rpx;
  color: #333;
  line-height: 36rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 右侧：状态下拉框 */
.status-picker {
  border: 1rpx solid #007aff;
  border-radius: 8rpx;
  padding: 6rpx 16rpx;
}

.status-text {
  font-size: 26rpx;
  color: #007aff;
  line-height: 36rpx;
}

/* 商品列表条目 */
.product-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.product-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  object-fit: cover;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  line-height: 36rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.product-meta {
  text-align: right;
}

.product-price {
  font-size: 26rpx;
  color: #000;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 小计 + 删除 */
.order-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 24rpx;
}

.total-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 12rpx;
}

.total-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  margin-right: 40rpx;
}

.delete-btn {
  font-size: 24rpx;
  color: #e64340;
  padding: 8rpx 12rpx;
  border: 1rpx solid #e64340;
  border-radius: 6rpx;
  text-align: center;
}
